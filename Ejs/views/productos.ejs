<%- include('./partials/head')-%>
<body>
  <header style="background-color: #212F3C;">
    <h1 style="color:blue; text-align: center; margin-bottom: 0px;">Lista de productos</h1>
  </header>
  <main>
    <% if(locals.arrayDeProductos){ %>
      <div class="table-responsive">
        <table class="table table-dark">
          <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Thumbnail</th> </tr>
          <%arrayDeProductos.forEach(function(producto) {%>
            <tr>
              <td><%=producto.title%></td>
              <td><%=producto.price%></td>
              <td><img src="<%=producto.thumbnail%>" alt="Imagen del producto"></td>
              </tr>
          <%});%>
        </table>
      </div>
    <%} else {%>
      <h3 class="alert alert-danger"><%=err.message%></h3>
    <%}%>
  </main>
  <footer>
    <a href="/">AÃ±adir producto</a>
  </footer>
</body>
</html>